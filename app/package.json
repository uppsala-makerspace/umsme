{
  "name": "meteor-app",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:css": "tailwindcss -i ./client/tailwind.css -o ./client/tailwind.output.css",
    "watch:css": "tailwindcss -i ./client/tailwind.css -o ./client/tailwind.output.css --watch",
    "start:test": "SEED_TEST_DATA=true MONGO_URL=mongodb://localhost:27017/umsapp-e2e-test meteor --port 3002 --settings settings_test.json",
    "seed:dev": "SEED_TEST_DATA=true SEED_ONLY=true MONGO_URL=mongodb://localhost:27017/umsme meteor --port 3001 --settings settings.json",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.7",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "dompurify": "^3.3.1",
    "i18next": "^24.2.3",
    "marked": "^17.0.1",
    "meteor-node-stubs": "^1.2.5",
    "moment": "^2.30.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.4.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.0",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^9.1.17",
    "@storybook/addon-mcp": "^0.1.6",
    "@storybook/addon-onboarding": "^9.1.17",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/addon-webpack5-compiler-swc": "^4.0.1",
    "@storybook/react-webpack5": "^9.1.17",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.2.0",
    "prop-types": "^15.8.1",
    "storybook": "^9.1.17",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18"
  }
}
